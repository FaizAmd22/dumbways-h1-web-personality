<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Projects</title>
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Animate -->
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="../assets/styles/bootstrap.min.css">
    <!-- My style -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,200;9..40,400;9..40,800;9..40,1000&display=swap');
        
        * {
            font-family: 'DM Sans', sans-serif;
        }
        body {
            background-color: #E3E7EB;
        }
        .active {
            font-weight: bold;
        }
        form {
            width: 60%;
        }
        .card img {
            height: 250px;
        }

        @media only screen and (max-width: 960px) {
            form {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid gap-3 mx-0 mx-md-5" id="container">
          <a class="navbar-brand" href="/">
            <img src="/assets/img/brandred.png" alt="Dumbways" style="width: 80px;">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/projects">Project</a>
              </li>
            </ul>
            <a href="/contact" type="button" class="btn btn-dark px-4 my-3 my-md-0">Contact Me</a>
          </div>
        </div>
    </nav>



    <div class="bg-white pb-4">
        <div class="container">
            <div class="d-flex justify-content-end pt-4 mb-4">
                <a href="/projects/add" class="btn btn-dark px-5 fw-bold"><i class="fa-solid fa-plus"></i> Add Project</a>
            </div>
                <div class="projects" id="projects">
                    {{#each datas}}
                        <div class="card mb-3">
                            <div class="row card-body">
                                <!-- image -->
                                <div class="col-12 col-lg-5">
                                    <img src="{{this.fileImage}}" alt="imageContent" class="w-100 rounded-2 mb-2 mb-lg-0">
                                </div>

                                <div class="col d-flex flex-column">
                                    <div class="order-lg-2">
                                        <!-- Judul card -->
                                        <a class="card-title text-decoration-none fw-bold text-capitalize" href="/projects/details/{{@index}}" target="_blank">
                                            <h2>{{this.projectName}}</h2>
                                        </a>

                                        <!-- Durasi -->
                                        <h6 class="card-subtitle mb-2 text-body-secondary">
                                            duration : {{this.duration}}
                                        </h6>
                                        <p class="card-text overflow-hidden" style="height: 70px;">
                                            {{this.desc}}
                                        </p>

                                        <!-- Icon -->
                                        <div class="mt-4 my-4 my-lg-0 d-flex gap-2">
                                                {{#if this.node}}
                                                    <i class='fa-brands fa-node-js fs-3'></i>
                                                {{/if}}
                                                {{#if this.next}}
                                                    <img src='/assets/icons/nextJs.png' alt='nextJs' style='width: 26px; height: 26px;'>
                                                {{/if}}
                                                {{#if this.react}}
                                                    <i class='fa-brands fa-react fs-3'></i>
                                                {{/if}}
                                                {{#if this.typescript}}
                                                    <img src='/assets/icons/typescript.png' alt='typeScript' style='width: 26px; height: 26px;'>
                                                {{/if}}
                                        </div>
                                    </div>
                                    
                                    <!-- Button -->
                                    <div class="row order-lg-1 mb-0 mb-md-3 d-flex justify-content-lg-end">
                                        <div class="col-6 col-lg-3">
                                            <div class="bg-dark-subtle rounded-2 d-flex justify-content-center">
                                                <a href="/projects/update/{{@index}}" class="btn px-5">Edit</a>
                                            </div>
                                        </div>

                                        <div class="col-6 col-lg-3">
                                            <div class="bg-dark rounded-2 d-flex justify-content-center">
                                                <form method="post" action="/projects/delete/{{@index}}" class="d-flex justify-content-center">
                                                    <button class="btn px-5 text-white">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
            </div>
        </div>
    </div>


    <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>