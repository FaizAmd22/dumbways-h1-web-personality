<html>

<head>
    <title>Add New Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{!-- bootstrap --}}
    <link rel="stylesheet" href="/assets/styles/bootstrap.min.css">
    {{!-- font awesome --}}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    {{!-- my Style --}}
    <style>
      body {
        background-color: #E3E7EB;
      }
      form {
        width: 60%;
      }

      @media only screen and (max-width: 990px) {
        form {
          width: 100%;
        }
      }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid gap-3 mx-0 mx-md-5" id="container">
          <a class="navbar-brand" href="/">
            <img src="/assets/img/brandred.png" alt="Dumbways" style="width: 80px;">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-3">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/projects">Project</a>
              </li>
            </ul>

            {{#unless isLogin}}
            <ul class="navbar-nav mx-0 mx-lg-5 mb-2 mb-lg-0 gap-3">
                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Login</a>
                </li>
            </ul>
            {{else}}
            <ul class="navbar-nav mx-0 mx-lg-5 mb-2 mb-lg-0 gap-3">
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
            {{/unless}}
            <a href="/contact" type="button" class="btn btn-dark px-4 my-3 my-md-0">Contact Me</a>
          </div>
        </div>
    </nav>

    {{#if messages.danger}}
        <div class="alert alert-danger mt-3 animate__animated animate__fadeIn" role="alert">
            <div class="container">
                {{messages.danger}}
            </div>
        </div>
    {{/if}}

    <div class="container d-flex flex-column justify-content-center" style="height: 90vh;">
        <h1 class="text-center fw-bold text-uppercase mb-5 animate__animated animate__fadeIn">Add my project</h1>
        <form class="row mx-auto g-3 needs-validation animate__animated animate__fadeIn" novalidate method="post" action="/projects/add" enctype="multipart/form-data">
            <!-- Project Name -->
            <div class="col-12">
                <label for="inputName" class="form-label fw-bold">Project Name</label>
                <input type="text" class="form-control shadow-sm" id="inputName" name="projectName" required>
            </div>

            <!-- Start Date -->
            <div class="col-6">
                <label for="inputStartDate" class="form-label fw-bold">Start Date</label>
                <input type="text" class="form-control shadow-sm" id="inputStartDate" name="startDate" required>
            </div>

            <!-- End Date -->
            <div class="col-6">
                <label for="inputEndDate" class="form-label fw-bold">End Date</label>
                <input type="text" class="form-control shadow-sm" id="inputEndDate" name="endDate" required>
            </div>

            <!-- Description -->
            <div class="col-12">
                <label for="inputDesc" class="form-label fw-bold">Description</label>
                <textarea class="form-control shadow-sm" id="inputDesc" rows="4" name="desc"></textarea>
            </div>

            <!-- Technologies -->
            <div class="col-12">
                <label class="form-label fw-bold">Technologies</label>
                <div class="row mb-2">
                    <div class="col-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="nodeJs" name="nodeJs">
                            <label class="form-check-label" for="nodeJs">
                              Node Js
                            </label>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="nextJs" name="nextJs">
                            <label class="form-check-label" for="nextJs">
                              Next Js
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="reactJs" name="reactJs">
                            <label class="form-check-label" for="reactJs">
                              React Js
                            </label>
                        </div>
                    </div>
                    <div class="col-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="typeScript" name="typescript">
                            <label class="form-check-label" for="typeScript">
                              TypeScript
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upload Image -->
            <div class="col-12">
                <label for="upload" class="form-label fw-bold">Upload Image</label>
                <input type="file" class="form-control shadow-sm" id="upload" required accept=".jpg, .png, .jpeg" name="file">
            </div>

            <!-- Button -->
            <div class="col-12 d-flex justify-content-end">
                <button class="btn btn-dark rounded-5 px-4 fw-bold mt-3" >Submit</button>
            </div>
        </form>
    </div>

    <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>